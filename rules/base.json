{
    // "$schema": "http://json.schemastore.org/eslintrc",
    "parser": "babel-eslint",
    "extends": [
        "./import.json",
        "./mocha.json",
        "./react.json",
        "./prettier.json"
    ],
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "arrow-body-style": [ 2, "as-needed" ],
        "array-bracket-spacing": 0,
        "block-scoped-var": 2,
        "camelcase": [ 2, { "properties": "never" } ],
        "consistent-return": 0,
        "default-case": 2,
        "dot-notation": [ 2, { "allowKeywords": true } ],
        "eqeqeq": 2,
        "func-names": 0, // TODO: This change is coming.
        "guard-for-in": 2,
        "new-cap": [ 0, { "newIsCap": true } ],
        "no-alert": 1,
        "no-caller": 2,
        "no-class-assign": 0,
        "no-cond-assign": [ 2, "always" ],
        "no-console": 1,
        "no-constant-condition": 1,
        "no-debugger": 2,
        "no-dupe-class-members": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-else-return": 2,
        "no-empty": 2,
        "no-eq-null": 2,
        "no-eval": 2,
        "no-ex-assign": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-extra-boolean-cast": 0,
        "no-fallthrough": 2,
        "no-func-assign": 2,
        "no-implied-eval": 2,
        "no-inner-declarations": 2,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-nested-ternary": 2,
        "no-new": 2,
        "no-new-func": 2,
        "no-new-object": 2,
        "no-new-wrappers": 2,
        "no-obj-calls": 2,
        "no-octal": 2,
        "no-octal-escape": 2,
        "no-param-reassign": 2,
        "no-proto": 2,
        "no-redeclare": 2,
        "no-return-assign": 0,
        "no-script-url": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-sparse-arrays": 2,
        "no-throw-literal": 2,
        "no-undef": 2,
        "no-underscore-dangle": 0,
        "no-unreachable": 2,
        "no-unused-vars": [ 2, { "vars": "local", "args": "after-used" } ],
        "no-use-before-define": 2,
        "no-with": 2,
        "one-var": [ 2, "never" ],
        "prefer-spread": 2,
        "radix": 2,
        "sort-vars": 2,
        "spaced-comment": 2,
        "strict": [ 2, "never" ],
        "use-isnan": 2,
        "vars-on-top": 0, //     TODO: This change is coming.
        "yoda": 2
    }
}
